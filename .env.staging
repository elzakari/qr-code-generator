# Staging Environment Configuration
FLASK_ENV=staging
SECRET_KEY=staging-secret-key-change-in-production
DATABASE_URL=postgresql://user:password@staging-db:5432/qr_generator_staging
REDIS_URL=redis://staging-redis:6379/0

# File Upload Settings
MAX_UPLOAD_MB=5
CLEANUP_MAX_AGE_HOURS=2

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# API Settings
CORS_ORIGINS=https://staging.yourapp.com
RATE_LIMIT_STORAGE_URL=redis://staging-redis:6379/1